<div class="container" style="margin:0;width:30%;margin:auto">
    <h2 class="page-header">Account Login</h2>
    {{#if errors}}
      {{#each errors}}
        <div class="alert {{type}}">{{msg}}</div>
      {{/each}}
    {{/if}}
    <form id="signin" method="POST" action="/users/login">
        <div class="form">
            <i class="fa fa-user prefix"></i>
            <input type="text" id="form3" name="username" placeholder="Userame" required>
        </div>
        <div class="form">
            <i class="fa fa-lock prefix"></i>
            <input type="password" id="form4" name="password" placeholder="Password" required>
        </div>
        <br><br>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>