<div class="container" style="margin:0;width:30%;margin:auto">
    <h2 class="page-header">Account Login</h2>
    {{#if errors}}
      {{#each errors}}
        <div class="col-md-3 alert {{type}}">{{msg}}</div>
      {{/each}}
    {{/if}}
    <form id="signin" method="POST" action="/login">
        <div class="form">
            <i class="fa fa-user prefix"></i>
            <input type="text" name="username" class="form-control input-lg" placeholder="Your username" required/>
        </div>
        <div class="form">
            <i class="fa fa-lock prefix"></i>
            <input type="password" name="password" class="form-control input-lg" placeholder="Password" required/>        
        </div>
        <br><br>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>