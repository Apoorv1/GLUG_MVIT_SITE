<div class="container pagediv">
<form class="form-horizontal" method="POST" action="/addevent">
<fieldset>

<!-- Form Name -->
<legend>Event Form</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="event_name">Name</label>  
  <div class="col-md-4">
  <input id="event_name" name="event_name" type="text" placeholder="Event Name" class="form-control input-md">
  </div>
</div>

<!-- Textarea -->
<div class="form-group">
  <label class="col-md-4 control-label" for="textarea">Description</label>
  <div class="col-md-4">                     
    <textarea class="form-control" id="textarea" name="event_desc"></textarea>
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Date</label>  
  <div class="col-md-4">
  <div class='input-group date' id='datetimepicker1'>
      <input name="event_date" id="event_date" type='text' class="form-control" />
      <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
      </span>
  </div>  
  </div>
</div>

<!-- Textarea -->
<div class="form-group">
  <label class="col-md-4 control-label" for="textarea">Speakers(provide ',' seperated multiple speakers)</label>
  <div class="col-md-4">                     
    <textarea class="form-control" id="textarea" name="event_speakers"></textarea>
  </div>
</div>

<!-- Textarea -->
<div class="form-group">
  <label class="col-md-4 control-label" for="textarea">Venue</label>
  <div class="col-md-4">                     
    <textarea class="form-control" id="textarea" name="event_venue"></textarea>
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textarea">Aditional Details</label>
  <div class="col-md-4">                     
    <textarea class="form-control" id="textarea" name="event_extras"></textarea>
  </div>
</div>
{{count}}
<!-- Upload Image -->
<a href="#" id="upload_widget_opener">Upload</a>

<input name="eid" value="glugmvit{{count}}" type="hidden">

<button type="submit" class="btn btn-primary">Submit</button>
</fieldset>
</form>
</div>
<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
<script type="text/javascript">  
  $('#upload_widget_opener').cloudinary_upload_widget(
    { 
      cloud_name: 'dttf46owb', 
      upload_preset: 'hlinckko', 
      folder: 'event_photos',
      multiple: false,
      sources: ['local'],
      public_id: "glugmvit"+"{{count}}",
      button_caption: 'Event Photo Upload',
      max_file_size: 1000000,
      show_powered_by: false
    },function(error, result) { 
      console.log(error, result);
      if(result){
        document.getElementById('uploaded').style.display="block";
        document.getElementById('close').style.display="none";
      }
    });
</script> 
<script type="text/javascript">
  $(function () {
      $('#datetimepicker1').datetimepicker();
  });
</script>